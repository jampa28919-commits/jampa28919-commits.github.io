{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/assets/**", "destination": "/assets/**" },
      { "source": "/images/**", "destination": "/images/**" },
      { "source": "/fonts/**", "destination": "/fonts/**" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
